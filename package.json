{
  "name": "swarmfm-player",
  "version": "1.0.3",
  "description": "Swarm FM Player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -wl",
    "release": "electron-builder build --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LukasDerBaum42/swarmfm-player.git"
  },
  "author": "LukasDerBaum",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "fm.swarm.player",
    "productName": "Swarm FM Player",
    "publish": {
      "provider": "github",
      "owner": "LukasDerBaum42",
      "repo": "swarmfm-player"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "build/icon.png"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Audio"
    }
  }
}
